<div class="box">
	<h1>Email Me Daily Updates</h1>

	<% form_for(@user) do |f| %>
	  <%= f.error_messages %>

	  <p>
	    <%= f.label :name %><br />
	    <%= f.text_field :name %>
	  </p>
	  <p>
	    <%= f.label :email %><br />
	    <%= f.text_field :email %>
	  </p>
	  <p>
	    <%= f.submit "Sign Up" %> <%= link_to 'cancel', '/' %>
	  </p>
	<% end %>
	
	<p>Emails are sent out daily at 6:00am</p>
	<p>Sign up to have the current inventory delivered directly to your inbox</p>
</div>